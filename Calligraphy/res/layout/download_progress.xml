<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="550dp" android:layout_height="400dp"
	android:orientation="vertical">

	<TextView android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="下载进度"
	android:textSize="15dp"
	android:id="@+id/textdown"
	android:layout_marginTop="20dp"/>

	<ProgressBar android:layout_width="400dp"
		android:layout_height="25dp" android:id="@+id/downloadProgressBar"
		android:visibility="visible" 
		android:layout_marginLeft="10dp"
		android:progress="0" style="?android:attr/progressBarStyleHorizontal" 
		android:layout_marginTop="20dp"
		android:layout_toRightOf="@+id/textdown"
		/>
	<TextView 
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id = "@+id/progressText"
		android:layout_toRightOf="@id/downloadProgressBar"
		android:layout_marginTop="20dp"
		android:textSize="15dp"
		android:layout_marginLeft="3dp"
	/>
	<Button android:layout_width="200dp"
		android:layout_height="50dp" android:text="隐藏详细信息" 
		android:layout_below="@+id/downloadProgressBar"
		android:layout_centerHorizontal="true"
		android:id="@+id/buttonScript"
		android:layout_marginTop="20dp"/>
	<TextView android:id="@+id/barText" android:layout_width="fill_parent"
		android:layout_height="200dp" 
		android:layout_below="@+id/buttonScript"
		android:layout_marginTop="10dp"
		android:text="具体信息"/>


</RelativeLayout>
